{% extends 'StoreBackendBundle::layout.html.twig' %}
{% block classtitle %}power-off{% endblock %}

{% block titlepage %}
    Se connecter
{% endblock %}
{% block content %}

    <class class="row">

        <div class="col-md-5 col-md-offset-3">
            {% if error is not empty %}
                <div class="alert alert-dark alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fa fa-warning"></i> &nbsp; {{ error.message }}
                </div>
            {% endif %}
            <form class="panel form-horizontal" action="{{ path('store_backend_security_login_check') }}" method="POST">
                <div class="panel-heading">
                    <span class="pannel-title">
                        <i class="fa fa-user"></i> Connectez-vous Ã  votre compte
                    </span>
                </div>
                <div class="panel-body">
                    <div class="row form-group">
                        <label class="col-sm-4 control-label" for="_username">Email | Username</label>
                        <div class="col-sm-8">
                            <input class="form-control" autocomplete="off" required="required" name="_username" id="_username" type="text"/>
                        </div>
                    </div>
                    <div class="row form-group">
                        <label class="col-sm-4 control-label" for="_password">Password</label>
                        <div class="col-sm-8">
                            <input class="form-control" name="_password" id="_password" autocomplete="off" required="required" type="password"/>
                        </div>
                    </div>
                    <div class="row form-group">
                        <label class="control-label col-sm-4" for="_remember_me">Se souvenir de moi</label>
                        <div class="col-sm-8">
                            <input class="checkbox-inline" name="_remember_me" id="_remember_me" checked type="checkbox"/>
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-power-off"></i> Se connecter</button>
                </div>
            </form>
        </div>
    </class>

{% endblock %}