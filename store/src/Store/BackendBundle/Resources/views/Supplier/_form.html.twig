{{ form_start(form) }}
    <div class="row">
        <div class="col-md-10">{{ form_row(form.name) }}</div>
        <div class="col-md-2">{{ form_row(form.active) }}</div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12">{{ form_row(form.description) }}</div>
    </div>
    <hr/>
    {{ form_widget(form.envoyer,{'attr' : {'class' : 'pull-right btn btn-lg btn btn-primary'}}) }}
    {{ form_widget(form._token) }}
{{ form_end(form,{'render_rest' : false}) }}