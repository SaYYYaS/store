{% extends 'StoreBackendBundle::layout.html.twig' %}
{% block classtitle %}th{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script>
        init.push(function () {
            $('textarea').summernote({
                height: 200,
                tabsize: 2,
                codemirror : {theme : 'monokai'}
            });
        });
    </script>
{% endblock %}
{% block titlepage %}
    Ajouter une cms
{% endblock %}
{% block content %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-8">{{ form_row(form.title) }}</div>
        <div class="col-md-2">
            <div class="label-form">
                {{ form_label(form.dateActive) }}
            </div>
            <div class="form-control text-center col-md-10">
                {{ form_widget(form.dateActive.day) }}
                {{ form_widget(form.dateActive.month) }}
                {{ form_widget(form.dateActive.year) }}
            </div>
        </div>
        <div class="col-md-2">{{ form_row(form.state) }}</div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.summary) }}</div>
        <div class="col-md-6">{{ form_row(form.description) }}</div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.image) }}</div>
        <div class="col-md-6">{{ form_row(form.video) }}</div>
    </div>
    <hr/>
    {{ form_widget(form.envoyer,{'attr' : {'class' : 'pull-right btn btn-lg btn btn-primary'}}) }}
    {{ form_widget(form._token) }}
    {{ form_end(form,{'render_rest' : false}) }} {# permet d'ajouter le button envoyer et 'render_rest' emp√®che l'affichage des autres fields#}

{% endblock %}

